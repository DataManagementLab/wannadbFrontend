#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# check if code is formatted
if ! npm run format:check
then
  echo "ðŸš¨ Code is not formatted! ðŸ˜•"
  echo "Please run 'npm run format' and commit again."
